doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{level}/#{lesson}
    //- link(rel="stylesheet" href="/styles.css")
  body
    div.card
      h2.card__level #{level} lesson-#{lesson}
      p.card__count
        span.card__count--element.card__count--element__first
        | /
        span.card__count--element.card__count--element__last
      div.card__inputs
        label.card__input
          input(type="radio" name="language" value="en" checked="checked")
          | en → ru
        label.card__input
          input(type="radio" name="language" value="ru" )
          | ru → en
      h1.card__phrase
      p.card__translation(style="visibility: hidden;")
      button.card__button.card__button--show translation
      button.card__button.card__button--add add to top
      button.card__button.card__button--next next
      button.card__button.card__button--prev prev
  script.
    window.translations = !{JSON.stringify(translations)}
  script(src="/scripts/card.js")

